<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
<body>
    {% include "components/navbar.html.jinja"%}

    <main class="grid grid-cols-4 gap-3 ml-15">
        {% for x in products %}
        <a href="/product/{{ x['ID']}}">
            <div class="flex flex-col">
                <img class="max-h-100 max-w-100 border-black border-10px" src=" {{ x['Image'] }}">
                {{ x["Name"] }}<br>
                ${{ x["Price"] }}<br>
                {{ x["Size"]}}<br>

            </div> 
        </a>
        {% endfor %}
    </main>
</body>
</html>