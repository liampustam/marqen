<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <link href= "/static/styles.css" rel="stylesheet" >
  </head>
<body>
  {% include "components/navbar.html.jinja"%}
<main class="max-w-5xl mx-auto p-6 mb-5 grid grid-cols-2 gap-10">
       <div class="col-span-1">
        {% for x in checkout %}
                    <div class="grid grid-cols-4 gap-6 items-center border-2 ">
                        <img class="max-h-48 mx-auto  border-black col-span-1" src="{{ x['Image'] }}">
                        <div class="col-span-3 text-2xl font-semibold">
                            {{ x['Name'] }} -
                            $ {{ x['Price'] * x['Quantity'] }}
                        </div>
                    </div>
                
        {% endfor %}
         </div>        


        <div class="col-span-1 border p-6">
                <h1>Shipping Address:</h1>
             <form method="post">
                <label>Street:</label>
            <br>
                <input required type="text" name="street" class="border">
            <br>  
                <label>State:</label>
            <br>   
                <input name="state" required type="text" class="border">
            <br>    
                <label>City:</label>
            <br>
                <input name="city" required type="text" class="border">
            <br>
                <label>ZipCode:</label>
            <br>
                <input name="zipcode" required type="text" class="border"> 
                <br>
            <button type="submit" class="text-deco px-4 py-2 rounded hover:bg-sky-700 hover:text-white">          
              Buy
            </button>   
             </form>


              Price: {{total}}
               
        </div>
</main>
</body>
</html>
